<table class="table table-hover table-bordered">
	<% @lists.each do |list| %>
		<tr>
			<b><td class="list-name"><%= link_to list.title, list %></td></b>
			<td class="actions"><%= link_to 'Edit', edit_list_path(list) %></td>
			<td class="actions"><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>