<h1><%= current_user.name %>'s lists</h1>

<table class="table table-striped">
<% @lists.each do |list| %>
  <tr>
    <b><td><%= link_to list.title, list %></td></b>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

