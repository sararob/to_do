<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>Task</th>
			<th>Date Completed</th>
		</tr>
	</thead>
	<tbody>
		<% current_user.list_items.each do |list_item| %>
		<% if list_item.complete != true %>
		<% else %>
			<tr>
				<td class="show-task"><%= list_item.task %></td>
				<td class="done-task"><%= list_item.updated_at.strftime("%A, %b %d")%></td>
			</tr>
				<% end %>
				<% end %>
</tbody>
</table>